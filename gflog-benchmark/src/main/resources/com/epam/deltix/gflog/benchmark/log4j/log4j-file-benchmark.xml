<Configuration name="Benchmark" status="info" shutdownHook="disable">
    <Appenders>
        <File name="file" fileName="${sys:temp-file}" immediateFlush="false">
            <PatternLayout pattern="%d %p '%c' [%t] %m%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="file"/>
        </Root>
    </Loggers>
</Configuration>
